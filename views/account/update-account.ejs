<% if (title) { %>
    <h1><%= title %></h1>
    <%} else{
        res.redirect('/')
    } %>
    
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% if(error.msg !== "Invalid value") {%>
                <li><%= error.msg %></li>
            <%}%>
        <% }) %>
    </ul>
<% } %>

<div id="updateAccWrapper">
    <form action="/account/update-data" method="post" id="updateData">
        <label for="fnamed">First Name</label><br>
        <input type="text" name="account_firstname" id="fnamed" value="<%- locals.accountData.account_firstname %>" required><br>
        <label for="lnamed">Last Name</label><br>
        <input type="text" name="account_lastname" id="lnamed" value="<%- locals.accountData.account_lastname %>" required><br>
        <label for="emailUpdate">Email</label><br>
        <input type="email" name="account_email" id="emailUpdate" value="<%- locals.accountData.account_email %>" required><br>
        <input type="hidden" name="account_id" value="<%- locals.accountData.account_id %>">
        <input type="submit" value="Update" id="submitData">
    </form>
    <form action="/account/update-pass" method="post" id="updatePassword">
        <h3>Update Password</h3>
        <p>Passwords must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</p>
        <p>*note your original password will be changed</p>
        <label for="changePassword">Password</label><br>
        <input type="password" name="account_password" id="changePassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <p>Passwords must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</p>
        <input type="hidden" name="account_id" value="<%- locals.accountData.account_id %>">
        <input type="submit" value="Change Password" id="submitPassword">
    </form>
</div>