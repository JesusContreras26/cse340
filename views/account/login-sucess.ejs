<% if (title) { %>
<h1><%= title %></h1>
<%} else{
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% if(error.msg !== "Invalid value") {%>
                <li><%= error.msg %></li>
            <%}%>
        <% }) %>
    </ul>
<% } %>

<div id="sucessLogin">
    <h2>Welcome New <%- locals.accountData.account_firstname %></h2>
    <p>You're logged in</p>
    <p><a href="/account/update">Edit Account Information</a></p>
    <% console.log(locals.accountData) %>
    <% if (locals.accountData.account_type == "Admin" || locals.accountData.account_type == "Employee") {%>
        <h3>Inventory Management</h3>
        <p><a href="/inv/">Manage Inventory</a></p>   
   <% } %>
   <%- reviews %>
</div>
