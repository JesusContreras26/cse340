<% if(title) {%>
    <h1><%= title %></h1>
<%} else{
    res.redirect('/')
}%>
    
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% if(error.msg !== "Invalid value") {%>
                <li><%= error.msg %></li>
            <%}%>
        <% }) %>
    </ul>
<% } %>

<div class="containerInv">
    <p>Confirm Deletion - The Delete is permanent</p>
    <form action="/inv/delete" method="post" class="addCar" id="deleteForm">
        <label for="make">Make</label><br>
        <input type="text" name="inv_make" readonly id="make" required placeholder="Min of 3 characters" pattern="^[^\s]+(.*[a-z\d]){2}" value="<%= locals.inv_make %>"><br>
        <label for="model">Model</label><br>
        <input type="text" name="inv_model" readonly id="model" required placeholder="Min of 3 characters" pattern="^[^\s]+(.*[a-z\d]){2}" value="<%= locals.inv_model %>"><br>
        <label for="price">Price</label><br>
        <input type="number" name="inv_price" readonly class="inpNumber" id="price" required placeholder="decimal or integer" pattern="^(0|[1-9]\d*)(\.\d+)?$" value="<%= locals.inv_price %>"><br>
        <label for="year">Year</label><br>
        <input type="number" name="inv_year" readonly class="inpNumber" id="year" required placeholder="4-digit year" pattern="^([0-9]{4})$" value="<%= locals.inv_year %>"><br>
        <input type="submit" value="Delete Vehicle" id="deleteBtn" class="submitBtn">
        <input type="hidden" name="inv_id"
        <% if (locals.inv_id) {%> value="<%= locals.inv_id %>"
            
        <%} %>>
    </form>
</div>
